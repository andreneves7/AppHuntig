<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistoUserActivity">


    <ScrollView
        android:layout_width="373dp"
        android:layout_height="587dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/addNome"
                android:layout_width="345dp"
                android:layout_height="54dp"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/addPass"
                android:layout_width="346dp"
                android:layout_height="54dp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/addEmail"
                android:layout_width="348dp"
                android:layout_height="53dp"
                android:ems="10"
                android:hint="email"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/addTele"
                android:layout_width="346dp"
                android:layout_height="58dp"
                android:ems="10"
                android:hint="Telefone"
                android:inputType="phone" />

            <EditText
                android:id="@+id/addLocalidade"
                android:layout_width="343dp"
                android:layout_height="58dp"
                android:ems="10"
                android:hint="Localidade"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/addMorada"
                android:layout_width="344dp"
                android:layout_height="55dp"
                android:ems="10"
                android:hint="Morada"
                android:inputType="textPostalAddress" />

            <EditText
                android:id="@+id/addPostal"
                android:layout_width="345dp"
                android:layout_height="51dp"
                android:ems="10"
                android:hint="Cod.Postal"
                android:inputType="numberSigned" />

            <EditText
                android:id="@+id/addCartao"
                android:layout_width="345dp"
                android:layout_height="51dp"
                android:ems="10"
                android:hint="C.C/BI"
                android:inputType="numberSigned" />

            <EditText
                android:id="@+id/addNif"
                android:layout_width="345dp"
                android:layout_height="51dp"
                android:ems="10"
                android:hint="Nif"
                android:inputType="numberSigned" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bPais_User"
                    android:layout_width="77dp"
                    android:layout_height="44dp"
                    android:background="@drawable/botoes"
                    android:text="Pais" />

                <EditText
                    android:id="@+id/addPais_Outros"
                    android:layout_width="224dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Outros"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <EditText
                android:id="@+id/add1"
                android:layout_width="345dp"
                android:layout_height="51dp"
                android:ems="10"
                android:hint="1"
                android:inputType="numberSigned" />

            <EditText
                android:id="@+id/add2"
                android:layout_width="345dp"
                android:layout_height="51dp"
                android:ems="10"
                android:hint="2"
                android:inputType="numberSigned" />

            <EditText
                android:id="@+id/add3"
                android:layout_width="345dp"
                android:layout_height="51dp"
                android:ems="10"
                android:hint="3"
                android:inputType="numberSigned" />

            <EditText
                android:id="@+id/add4"
                android:layout_width="345dp"
                android:layout_height="51dp"
                android:ems="10"
                android:hint="4"
                android:inputType="numberSigned" />

            <EditText
                android:id="@+id/add5"
                android:layout_width="345dp"
                android:layout_height="51dp"
                android:ems="10"
                android:hint="5"
                android:inputType="numberSigned" />

            <EditText
                android:id="@+id/add5"
                android:layout_width="345dp"
                android:layout_height="51dp"
                android:ems="10"
                android:hint="5"
                android:inputType="numberSigned" />

        </LinearLayout>
    </ScrollView>

